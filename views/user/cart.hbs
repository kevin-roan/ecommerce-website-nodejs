<section>
<div class=container>
<table class="table">
  <thead>
  {{#each products}}
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Title</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    {{#each this.product}}
      <th scope="row">
    <img style="width:70px;height:70px;" src="/product-images/{{this._id}}.jpg" alt=""></img>
      </th>
     <td>
       {{this.Name}}
    {{/each}}
      </td>
      <td>
    <button class="btn cart-item-count mr-3">-</button >{{this.quantity}}<button class="btn cart-item-count ml-3">+</button>
      </td>
      <td>
      <button class="btn btn-danger">Remove</button>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>
</div>
</section>

